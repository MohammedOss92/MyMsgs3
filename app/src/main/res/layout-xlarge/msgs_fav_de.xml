<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="afterDescendants"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tvTitle_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="top"
                android:gravity="center"
                android:text="---"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff0000" />

            <TextView
                android:id="@+id/tvMsg_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shape" />

            <LinearLayout
                android:id="@+id/asasasas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/more_btn_fav"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/fav_btn"
                    android:src="@drawable/more" />

                <ImageView
                    android:id="@+id/fav_btn"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/new_Msg_m"
                    android:src="@drawable/baseline_favorite_true" />


                <ImageView
                    android:id="@+id/new_Msg_m"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/copy"
                    android:src="@drawable/new_msg"
                    android:visibility="invisible" />


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

